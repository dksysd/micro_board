# MicroBoard 플랫폼 환경 변수

# 애플리케이션 환경
NODE_ENV=development
PORT=3000

# JWT 인증 설정
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# 데이터베이스 설정 - Auth Service
AUTH_DB_HOST=auth-db
AUTH_DB_PORT=5432
AUTH_DB_NAME=authdb
AUTH_DB_USER=authuser
AUTH_DB_PASSWORD=authpass

# 데이터베이스 설정 - Post Service
POST_DB_HOST=post-db
POST_DB_PORT=5432
POST_DB_NAME=postdb
POST_DB_USER=postuser
POST_DB_PASSWORD=postpass

# 데이터베이스 설정 - Comment Service
COMMENT_DB_HOST=comment-db
COMMENT_DB_PORT=5432
COMMENT_DB_NAME=commentdb
COMMENT_DB_USER=commentuser
COMMENT_DB_PASSWORD=commentpass

# 서비스 간 통신 URL
AUTH_SERVICE_URL=http://auth-service:3001
POST_SERVICE_URL=http://post-service:3002
COMMENT_SERVICE_URL=http://comment-service:3003

# CORS 설정
CORS_ORIGIN=http://localhost:3000

# API Gateway 설정
API_GATEWAY_URL=http://localhost:8080

# 프론트엔드 설정
REACT_APP_API_URL=http://localhost:8080
REACT_APP_APP_NAME=MicroBoard
REACT_APP_VERSION=1.0.0

# Redis 설정 (선택사항)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# 로깅 설정
LOG_LEVEL=info
LOG_FORMAT=json

# Docker Swarm 설정
SWARM_ADVERTISE_ADDR=192.168.1.100

# 보안 설정
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# 파일 업로드 설정
MAX_FILE_SIZE=10MB
UPLOAD_PATH=/uploads

# 이메일 설정 (추후 구현)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@microboard.com

# 모니터링 설정 (추후 구현)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# 개발 도구 설정
ADMINER_PORT=8081
PGADMIN_PORT=8082