# MicroBoard 플랫폼 환경 변수

# JWT 인증 설정
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# 데이터베이스 설정 - Auth Service
AUTH_DB_HOST=auth-db
AUTH_DB_PORT=5432
AUTH_DB_NAME=authdb
AUTH_DB_USER=authuser
AUTH_DB_PASSWORD=authpass

# 데이터베이스 설정 - Post Service
POST_DB_HOST=post-db
POST_DB_PORT=5432
POST_DB_NAME=postdb
POST_DB_USER=postuser
POST_DB_PASSWORD=postpass

# 데이터베이스 설정 - Comment Service
COMMENT_DB_HOST=comment-db
COMMENT_DB_PORT=5432
COMMENT_DB_NAME=commentdb
COMMENT_DB_USER=commentuser
COMMENT_DB_PASSWORD=commentpass

# CORS 설정
CORS_ORIGIN=http://localhost:3000

# 프론트엔드 설정
REACT_APP_API_URL=http://localhost:8080

# 로깅 설정
LOG_LEVEL=info

# 포트 설정
API_GATEWAY_PORT=8080
FRONTEND_PORT=3000